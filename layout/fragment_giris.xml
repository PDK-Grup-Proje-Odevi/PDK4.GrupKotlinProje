<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/LightPink"
    tools:context=".GirisFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <Button
            android:id="@+id/button_giris"
            android:layout_width="342dp"
            android:layout_height="88dp"
            android:layout_marginBottom="75dp"
            android:backgroundTint="@color/DarkPink"
            android:onClick="galeriyegit"
            android:text="Başla"
            android:textColor="@color/White"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="231dp"
            android:layout_height="116dp"
            android:layout_marginBottom="15dp"
            android:hint="Hayal gücünü renklerle buluştur"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColorHint="@color/DarkPink"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/button_giris"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="340dp"
            android:layout_height="346dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/shooting_star"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/firca"
            android:layout_width="162dp"
            android:layout_height="230dp"
            android:src="@drawable/boya_fircasi"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.935"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.129" />

</androidx.constraintlayout.widget.ConstraintLayout>